<h1>My articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to "#{article.title}", article_path(article) %>
      <%= article.content %>
      <%= link_to "Delete",
            article_path(article),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Create a new article', new_article_path %>
